<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/postgres?currentSchema=hiber</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">qwe</property>
        <property name="connection.\\\">1</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>
        <property name="show_sql">false</property>
        <property name="current_session_context_class">thread</property>

        <mapping class="com.aleksandr0412.hibernate.entities.Client"/>
        <mapping class="com.aleksandr0412.hibernate.entities.Product"/>
        <mapping class="com.aleksandr0412.hibernate.entities.Purchases"/>
    </session-factory>
</hibernate-configuration>